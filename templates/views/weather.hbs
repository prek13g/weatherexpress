</footer>
<script src="main.js"></script>
<script>
     const getcurrentday =()=>{
          var weekday = new Array();
          weekday[0] = 'sunday';
          weekday[1] = 'monday';
          weekday[2] = 'tuesday';
          weekday[3] = 'wednesday';
          weekday[4] = 'thursday';
          weekday[5] = 'friday';
          weekday[6] = 'saturday';

         let currentime = new Date();
             let days = weekday[currentime.getDay()];
             let day = document.getElementById('day');
            day.innerText = days;
     };
 getcurrentday(); 
  let curdate = new Date();
     let currdate = curdate.getDate();
     var month = new Array();
month[0] = "January";
month[1] = "February";
month[2] = "March";
month[3] = "April";
month[4] = "May";
month[5] = "June";
month[6] = "July";
month[7] = "August";
month[8] = "September";
